{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016"
  }
}
