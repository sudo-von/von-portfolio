{
  "collectCoverageFrom": ["src/**/*.{.js,ts}", "!src/**/*.d.ts"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["lcov"],
  "moduleNameMapper": {
    "^@application/(.*)$": "<rootDir>/src/application/$1",
    "^@domain/(.*)$": "<rootDir>/src/domain/$1"
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/?(*.)+(test).ts"]
}
